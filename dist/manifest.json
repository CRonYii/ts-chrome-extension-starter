{
  "manifest_version": 2,
  "name": "ts-chrome-extension-starter",
  "description": "ts-chrome-extension-starter",
  "version": "1.0",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [

  ],
  "background": {
    "scripts": [
      "js/bundle.js",
      "js/background.js",
      "js/hot-reload.js"
    ]
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ]
}