{
  "manifest_version": 3,
  "name": "ts-chrome-extension-starter",
  "description": "ts-chrome-extension-starter",
  "version": "1.0",
  "options_page": "options.html",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}